<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.cmh.MHBlog.domain.post.PostMapper">

    <!-- tb_post 테이블 전체 컬럼 -->
    <sql id="postColumns">
          ID
        , TITLE
        , CONTENT
        , WRITER
        , VIEW_CNT
        , NOTICE_YN
        , DELETE_YN
        , REGIST_DTTM
        , MODIFIED_DTTM
    </sql>


    <!-- 게시글 검색 -->
    <sql id="search">
        <!-- 검색 키워드가 있을 때 -->
        <if test="keyword != null and keyword != ''">
            <choose>
                <!-- 검색 유형이 있을 때 -->
                <when test="searchType != null and searchType != ''">
                    <choose>
                        <when test="'title'.equals( searchType )">
                            AND title LIKE CONCAT('%', #{keyword}, '%')
                        </when>
                        <when test="'content'.equals( searchType )">
                            AND content LIKE CONCAT('%', #{keyword}, '%')
                        </when>
                        <when test="'writer'.equals( searchType )">
                            AND writer LIKE CONCAT('%', #{keyword}, '%')
                        </when>
                    </choose>
                </when>

                <!-- 전체 검색일 때 -->
                <otherwise>
                    AND (
                           title LIKE CONCAT('%', #{keyword}, '%')
                        OR content LIKE CONCAT('%', #{keyword}, '%')
                        OR writer LIKE CONCAT('%', #{keyword}, '%')
                    )
                </otherwise>
            </choose>
        </if>
    </sql>


    <!-- 게시글 저장 -->
    <insert id="save" parameterType="org.cmh.MHBlog.domain.post.PostRequest" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO MH0_Blog_Post (
            <include refid="postColumns" />
        ) VALUES (
              #{id}
            , #{title}
            , #{content}
            , #{writer}
            , 0
            , #{noticeYn}
            , 0
            , NOW()
            , NULL
        )
    </insert>


    <!-- 게시글 상세정보 조회 -->
    <select id="findById" parameterType="long" resultType="org.cmh.MHBlog.domain.post.PostResponse">
        SELECT
            <include refid="postColumns" />
        FROM
        MH0_Blog_Post
        WHERE
            id = #{value}
    </select>


    <!-- 게시글 수정 -->
    <update id="update" parameterType="org.cmh.MHBlog.domain.post.PostRequest">
        UPDATE MH0_Blog_Post
        SET
              modifiedDttm = NOW()
            , title = #{title}
            , content = #{content}
            , writer = #{writer}
            , notice_yn = #{noticeYn}
        WHERE
            id = #{id}
    </update>


    <!-- 게시글 삭제 -->
    <delete id="deleteById" parameterType="long">
        UPDATE MH0_Blog_Post
        SET
            delete_yn = 1
        WHERE
            id = #{id}
    </delete>


    <!-- 게시글 리스트 조회 -->
    <select id="findAll" parameterType="org.cmh.MHBlog.common.dto.SearchDto" resultType="org.cmh.MHBlog.domain.post.PostResponse">
        SELECT
            <include refid="postColumns" />
        FROM
        MH0_Blog_Post
        WHERE
            delete_yn = 0
            <include refid="search" />
        ORDER BY
            id DESC
        LIMIT #{pagination.limitStart}, #{recordSize}
    </select>


    <!-- 게시글 수 카운팅 -->
    <select id="count" parameterType="org.cmh.MHBlog.common.dto.SearchDto" resultType="int">
        SELECT
            COUNT(*)
        FROM
            MH0_Blog_Post
        WHERE
            delete_yn = 0
            <include refid="search" />
    </select>

</mapper>